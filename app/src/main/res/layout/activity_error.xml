<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.StaffTransactionNew"
    android:id="@+id/main">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        style="@style/toolbarLayout">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbarLayout"
            style="@style/collapsingToolbarLayout"
            app:toolbarId="@+id/toolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/toolbar"
                app:title="NICE 3000+"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_back"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            style="@style/linearLayout.vertical.center"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/errorCodeLayout"
                style="@style/textInputLayout"
                app:prefixText="E"
                app:prefixTextAppearance="@style/text"
                android:hint="Error Code">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/errorCode"
                    style="@style/textInput"
                    android:inputType="number"
                    android:imeOptions="actionSearch"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/checkButton"
                style="@style/button.elevated.submit"
                android:text="Check"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/detailsLayout"
                style="@style/linearLayout.vertical.center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/code"
                    style="@style/text.bold"
                    android:textSize="22sp"
                    android:gravity="center"/>
                <View
                    android:layout_width="80dp"
                    android:layout_height="3dp"
                    android:background="@color/blue"
                    android:layout_gravity="center"/>

                <LinearLayout
                    style="@style/linearLayout.vertical.center"
                    android:background="@drawable/gradient_linear_violet"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        style="@style/text.bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="Details"/>
                    <View
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/description"
                        style="@style/text.bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_cause"
                    style="@style/linearLayout.vertical.center"
                    android:background="@drawable/gradient_linear_dark_blue"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        style="@style/text.bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="Cause"/>
                    <View
                        android:layout_width="70dp"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/cause"
                        style="@style/text.small"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="8dp"
                        android:lineSpacingExtra="5dp"
                        android:gravity="start"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_level"
                    style="@style/linearLayout.vertical.center"
                    android:background="@drawable/gradient_linear_red"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        style="@style/text.bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="Fault Level"/>
                    <View
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:background="@color/white"/>
                    <TextView
                        android:id="@+id/level"
                        style="@style/text.small"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="5dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_solution"
                    style="@style/linearLayout.vertical.center"
                    android:background="@drawable/gradient_linear_green"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        style="@style/text.bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="Solution"/>
                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:background="@color/white"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/solution"
                        style="@style/text.small"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="8dp"
                        android:lineSpacingExtra="5dp"
                        android:gravity="start"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>