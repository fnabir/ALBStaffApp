<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Callback">
    <RelativeLayout
        android:id="@+id/title"
        style="@style/rlt">
        <ImageButton
            style="@style/btn_back"/>
        <TextView
            style="@style/title"
            android:text="কলবেক"/>
        <ImageView
            style="@style/title_ic"
            android:src="@drawable/ic_add"
            android:onClick="Report"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/l"
        style="@style/rv"
        android:layout_below="@+id/title"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            style="@style/llayout">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                style="@style/llayout_rv"/>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/empty"
        style="@style/empty"
        android:drawableTop="@drawable/empty_transaction"
        android:text="কোনো কলবেক পাওয়া যায়নি"
        android:layout_below="@+id/title"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>