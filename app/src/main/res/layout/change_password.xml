<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blueM"
    tools:context=".ChangePassword">
    <RelativeLayout
        android:id="@+id/title"
        style="@style/rlt">
        <ImageButton
            style="@style/btn_back"/>
        <TextView
            style="@style/title"
            android:text="পাসওয়ার্ড পরিবর্তন"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img"
        style="@style/main_img"
        android:src="@drawable/ic_password"/>
    <View
        style="@style/view_bg"
        android:layout_below="@+id/img"/>
    <ScrollView
        style="@style/llayout"
        android:layout_below="@id/title"
        android:layout_alignParentBottom="true">
        <LinearLayout
            style="@style/llayout_v">
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/tp"/>
            <LinearLayout
                android:id="@+id/l"
                style="@style/llayout_v"
                android:background="@drawable/bg_av"
                android:paddingTop="10dp">
                <TextView
                    android:text="ইমেইল"
                    style="@style/tv_label"/>
                <TextView
                    android:id="@+id/mail"
                    style="@style/tv_readonly"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lpwd"
                    style="@style/etl"
                    android:hint="বর্তমান পাসওয়ার্ড"
                    app:passwordToggleTint="@color/blueD"
                    app:passwordToggleEnabled="true"
                    app:hintAnimationEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pwd"
                        style="@style/et"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lnpwd"
                    style="@style/etl"
                    android:hint="নতুন পাসওয়ার্ড"
                    app:passwordToggleTint="@color/blueD"
                    app:passwordToggleEnabled="true"
                    app:hintAnimationEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/npwd"
                        style="@style/et"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lcopwd"
                    style="@style/etl"
                    android:hint="কনফার্ম নতুন পাসওয়ার্ড"
                    app:passwordToggleTint="@color/blueD"
                    app:passwordToggleEnabled="true"
                    app:hintAnimationEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/copwd"
                        style="@style/et"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/update"
                    android:layout_marginTop="30dp"
                    android:text="আপডেট"
                    android:onClick="Save"
                    style="@style/btn_f"/>
                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/load"
                    style="@style/SpinKitView.Circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    app:SpinKit_Color="@color/blueD" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>