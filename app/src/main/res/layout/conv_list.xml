<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueM"
    tools:context=".ConvList">
    <RelativeLayout
        android:id="@+id/title"
        style="@style/rlt">
        <ImageButton
            style="@style/btn_back"/>
        <TextView
            android:text="কনভেন্স"
            style="@style/title"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/l"
        style="@style/rv"
        android:background="@color/tp"
        android:layout_below="@+id/title"
        android:layout_alignParentBottom="true">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout
        android:id="@+id/lt"
        style="@style/llayout_vc"
        android:background="@color/blueD"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:paddingTop="12dp">
        <LinearLayout
            style="@style/ltotal">
            <TextView
                style="@style/lt_title"
                android:text="@string/conveyance"/>
            <TextView
                android:id="@+id/amount"
                style="@style/lt_amount"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/empty"
        android:drawableTop="@drawable/empty_transaction"
        android:text="কোনো কনভেন্স পাওয়া যায়নি"
        android:layout_below="@+id/title"
        style="@style/empty"/>
</RelativeLayout>