<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Error">
    <RelativeLayout
        android:id="@+id/title"
        style="@style/rlt">
        <ImageButton
            style="@style/btn_back"/>
        <TextView
            style="@style/title"
            android:text="সমস্যার বিবরণ"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img"
        style="@style/main_img"
        android:src="@drawable/ic_error"/>
    <View
        style="@style/view_bg"
        android:layout_below="@+id/img"/>
    <ScrollView
        style="@style/llayout"
        android:layout_below="@id/title"
        android:layout_alignParentBottom="true">
        <LinearLayout
            style="@style/llayout_v">
            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/tp"/>
            <LinearLayout
                android:id="@+id/l"
                style="@style/llayout_v"
                android:background="@drawable/bg_av"
                android:paddingTop="10dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lcode"
                    style="@style/etl"
                    android:hint="সমস্যার কোড">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/no"
                        style="@style/et"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/view"
                    android:text="দেখুন"
                    android:onClick="View"
                    android:layout_marginTop="5dp"
                    style="@style/btn_f"/>
                <LinearLayout
                    android:id="@+id/le"
                    style="@style/llayout_vc"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/code"
                        style="@style/text_b"
                        android:textSize="22sp"
                        android:gravity="center"/>
                    <View
                        android:layout_width="80dp"
                        android:layout_height="3dp"
                        android:background="@color/black"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:id="@+id/ld"
                        style="@style/llayout_vc"
                        android:background="@drawable/btn_ws"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp">
                        <TextView
                            style="@style/text_b"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="normal"
                            android:text="বর্ণনা"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="@color/gray"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/description"
                            style="@style/text_b"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_cause"
                        style="@style/llayout_vc"
                        android:background="@drawable/btn_ws">
                        <TextView
                            style="@style/text_b"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="normal"
                            android:text="কারণ"/>
                        <View
                            android:layout_width="70dp"
                            android:layout_height="2dp"
                            android:background="@color/gray"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/cause"
                            style="@style/text_s"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="8dp"
                            android:lineSpacingExtra="5dp"
                            android:gravity="start"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_level"
                        style="@style/llayout_vc"
                        android:background="@drawable/btn_ws"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp">
                        <TextView
                            style="@style/text_b"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="normal"
                            android:text="সমস্যার লেভেল"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="@color/gray"/>
                        <TextView
                            android:id="@+id/level"
                            style="@style/text_s"
                            android:padding="5dp"
                            android:lineSpacingExtra="5dp"
                            android:textFontWeight="600"
                            android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_solution"
                        style="@style/llayout_vc"
                        android:background="@drawable/btn_ws">
                        <TextView
                            style="@style/text_b"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textStyle="normal"
                            android:text="সমাধান"/>
                        <View
                            android:layout_width="80dp"
                            android:layout_height="2dp"
                            android:background="@color/gray"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/solution"
                            style="@style/text_s"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="5dp"
                            android:lineSpacingExtra="5dp"
                            android:gravity="start"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>