<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Text Style -->
    <style name="text" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text.bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text.extraSmall">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.small">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text.large" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text.extraLarge" parent="text.large">
        <item name="android:textSize">27sp</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:backgroundTint">@color/md_theme_primaryContainer</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="textContainer" parent="layout">
        <item name="android:background">@drawable/outline_text</item>
        <item name="android:elevation">-1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">-15dp</item>
    </style>
    <style name="textContainer.spinner">
        <item name="android:spinnerMode">dialog</item>
    </style>
    <style name="textInputLabel" parent="text">
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/md_theme_background</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <style name="textDropDownLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <style name="textInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <!-- Button -->
    <style name="button" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="button.elevated" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="button.text" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="button.dashboard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:backgroundTint">@color/md_theme_primaryContainer</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="button.menu" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/md_theme_inversePrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="button.date" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:text">@string/choose_date</item>
    </style>
    <style name="button.elevated.submit">
        <item name="backgroundTint">@color/md_theme_primaryContainer</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingEnd">70dp</item>
        <item name="android:text">@string/submit</item>
    </style>
    <style name="button.elevated.delete">
        <item name="backgroundTint">@color/md_theme_errorContainer</item>
        <item name="android:textColor">@color/md_theme_onErrorContainer</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingEnd">70dp</item>
        <item name="android:text">@string/delete</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Layout -->
    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="scrollView" parent="layout">
        <item name="android:scrollbarThumbVertical">@color/md_theme_primary</item>
    </style>

    <style name="linearLayout" parent="layout">
        <item name="android:animateLayoutChanges">true</item>
    </style>
    <style name="linearLayout.horizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="linearLayout.horizontal.center">
        <item name="android:gravity">center</item>
    </style>
    <style name="linearLayout.vertical">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linearLayout.vertical.center">
        <item name="android:gravity">center</item>
    </style>

    <!-- Total Amount Layout -->
    <style name="layoutTotalContainer" parent="linearLayout.vertical.center">
        <item name="android:background">@color/md_theme_onPrimary</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="layoutTotal" parent="linearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:backgroundTint">@color/overlay</item>
    </style>
    <style name="layoutTotalText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/textColor_inverse</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="layoutTotalAmount" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textColor_inverse</item>
    </style>
    <style name="layoutTotalDate" parent="text">
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
    </style>
    <style name="snackBarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">0dp</item>
        <item name="animationMode">slide</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="menuTitle" parent="text.bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="toolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="collapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/collapsingToolbarLayoutLargeSize</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">@color/md_theme_onPrimary</item>
        <item name="titleCollapseMode">scale</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.Material3.HeadlineLarge</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
        <item name="titleCentered">true</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
    </style>

    <style name="emptyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/empty</item>
        <item name="android:paddingTop">80dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/divider</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

</resources>